<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Toolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/action_bar_elevation</item>
        <item name="titleTextAppearance">@style/Title</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar.AppTheme">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/primary_text_inverse</item>
    </style>

    <style name="ToolbarNavigationIcon" parent="Widget.AppCompat.Toolbar.Button.Navigation"/>

    <style name="ToolbarNavigationIcon.White" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>
</resources>