<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_selector</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_inverse</item>
        <item name="android:windowBackground">@color/window</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/ripple</item>
        <item name="android:actionBarSize">@dimen/action_bar_size</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">?colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/primary_text_inverse</item>
        <item name="toolbarStyle">@style/Toolbar.AppTheme</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationIcon.White</item>
    </style>

</resources>
